<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="16dp"
    android:paddingHorizontal="30dp"
    android:background="@drawable/iv_background_gradient_light_green"
    tools:context=".ui.auth.registerverification.VerificationFragment">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="114dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/logo_desc"
        android:src="@drawable/iv_logo_text_bg" />

    <ImageView
        android:id="@+id/illustration"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_email"
        android:contentDescription="@string/illustration_desc"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/verification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/illustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Email Verification"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/verification_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verification_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="A verification email has been sent to your email address. Please check your email and follow the instructions to verify your account."
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:padding="8dp" />

    <Button
        android:id="@+id/go_to_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification_instruction"
        android:layout_marginTop="24dp"
        android:background="@drawable/iv_rounded_button"
        android:text="Go to Login"
        android:textColor="@android:color/white" />
</RelativeLayout>
