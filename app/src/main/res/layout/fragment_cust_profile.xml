<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cust.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Profile Image and Username -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/iv_profile_placeholder" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="highking"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- Edit Profile and Share Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/buttonEditProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:backgroundTint="@color/green_primary"
                    android:textColor="@android:color/white"
                    android:drawableTint="@color/white"
                    android:drawableRight="@drawable/ic_edit"
                    android:paddingHorizontal="16dp"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/buttonShareProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:backgroundTint="@color/green_light"
                    android:textColor="@color/green_primary"
                    android:drawableTint="@color/green_primary"
                    android:drawableRight="@drawable/ic_send"
                    android:paddingHorizontal="16dp"
                    android:drawablePadding="8dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Expandable Sections -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Informasi Akun Section -->
                <LinearLayout
                    android:id="@+id/llheaderInfoAkun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:background="@drawable/custom_bg_white_rounded_dropdown"
                    android:onClick="toggleInfoAkun">

                    <LinearLayout
                        android:id="@+id/headerInfoAkun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_user"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Informasi Akun"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp" />

                    <ImageView
                        android:id="@+id/arrowInfoAkun"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/dark_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contentInfoAkun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HighKing"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="highking@gmail.com"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No Telpon"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="(+62) XXX-XXXX-XXXX"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Pengaturan Section -->
                <LinearLayout
                    android:id="@+id/headerSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_bg_white_rounded_dropdown"
                    android:onClick="toggleSettings">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengaturan"
                        android:layout_marginTop="2dp"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:paddingStart="10dp" />

                    <ImageView
                        android:id="@+id/arrowSettings"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_arrow_down"
                        app:tint="@color/dark_grey" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/contentSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:visibility="gone">

                        <!-- Add settings items here -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pengaturan 1"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Apadah"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
