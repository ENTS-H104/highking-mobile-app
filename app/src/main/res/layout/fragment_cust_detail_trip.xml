                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- Map Location -->
            <TextView
                android:id="@+id/tv_location_map_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi di Maps"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ll_faq"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_location_map"
                android:layout_width="wrap_content"
                android:layout_height="165dp"
                android:src="@drawable/iv_illustration_maps"
                app:layout_constraintTop_toBottomOf="@id/tv_location_map_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerInside" />

            <!-- Share Info -->
            <TextView
                android:id="@+id/tv_share_info_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Informasi"
                android:textStyle="bold"
                android:paddingTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/iv_location_map"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/ll_share_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_share_info_header"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="66dp"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_twitter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_facebook"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_instagram" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Search Trips Button -->
    <Button
        android:id="@+id/fab_checkout_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesan Trip"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:background="@drawable/iv_rounded_button"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
