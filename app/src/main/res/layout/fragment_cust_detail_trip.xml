                <!-- FAQ 2 Section -->
                <LinearLayout
                    android:id="@+id/ll_faq_2_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_bg_white_rounded_dropdown"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
