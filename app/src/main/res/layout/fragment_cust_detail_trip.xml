                    </LinearLayout>
                </LinearLayout>

                <!-- Exclude Section -->
                <LinearLayout
                    android:id="@+id/ll_exclude_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_bg_white_rounded_dropdown"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_slash"
                            app:tint="@color/orange" />

                        <TextView
                            android:id="@+id/tv_exclusion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Exclude"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/orange"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                        <ImageView
                            android:id="@+id/iv_expand_exclusion"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:tint="@color/orange"
                            android:src="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_exclusion_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Trip Schedule -->
            <TextView
                android:id="@+id/tv_trip_schedule_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jadwal Trip"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ll_inclusion_exclusion"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/ll_trip_schedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_trip_schedule_header">

                <!-- Day 1 Section -->
                <LinearLayout
                    android:id="@+id/ll_day_1_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/custom_bg_white_rounded_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_day_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Day 1"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/iv_expand_day_1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:tint="@android:color/darker_gray"
                            android:src="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_day_1_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Lorem ipsum"
                            android:paddingTop="4dp"
                            android:textColor="@android:color/black" />
                        <TextView
