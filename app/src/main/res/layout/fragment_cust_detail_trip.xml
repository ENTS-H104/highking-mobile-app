                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            app:tint="@color/green_primary"
                            android:src="@drawable/ic_arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_inclusion_content"
